<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Tabla Generada</title>
  <style>
    table {
      width: 50%;
      border-collapse: collapse;
      margin: 20px 0;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #f2f2f2;
    }
    tr:nth-child(even) {
      background-color: #f9f9f9;
    }
  </style>
</head>
<body>
  <h1>Tabla de Operaciones</h1>
  <table>
    <tbody>
      <% if (tabla.length > 0) { %>
        <% tabla.forEach(function(item) { %>
          <tr>
            <td><b><%= item.numero %></b></td>
            <td><b><%= item.simboloOperacion %></b></td>
            <td><b><%= item.i %></b></td>
            <td><b>=</b></td>
            <td><b><%= item.resultado %></b></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="5">No hay datos disponibles</td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <a href="/">Volver</a>
</body>
</html>
